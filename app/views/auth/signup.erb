<form action="/signup" method="POST">
    <p>Username:</p>
    <input type="text" name="user[name]" value="<%= params[:name] %>" placeholder="At least three characters.">
    <p>Email:</p>
    <input type="text" name="user[email]">
    <p>Password:</p>
    <input type="password" name="user[password]">
    <p>Password Again:</p>
    <input type="password" name="user[password_confirmation]">
    <input type="submit">
</form>
